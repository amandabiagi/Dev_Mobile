<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="@drawable/fundo1">
    <ImageView
            android:layout_width="180dp"
            android:layout_height="157dp" app:srcCompat="@drawable/icone_perfil"
            android:id="@+id/imageView"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="112dp"
            android:layout_marginTop="70dp" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="Leôncio Conceição"
            android:layout_width="180dp"
            android:layout_height="32dp"
            android:id="@+id/textView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="112dp" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView" android:fontFamily="sans-serif-thin"
            android:textColor="#FFFFFF" android:textSize="20sp" android:textStyle="bold"/>
    <EditText
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText" android:layout_marginStart="80dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:backgroundTint="#FFFFFF"
            android:background="#97FFFCFC"/>
    <EditText
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/editText3"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="80dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/editText"
            android:background="#97FFFCFC"
            android:drawableLeft="@drawable/cadeado" android:backgroundTint="#FFFEFE"/>

    <Button
            android:text="Login"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:id="@+id/button" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="80dp"
            android:layout_marginTop="10dp" app:layout_constraintTop_toBottomOf="@+id/editText3"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:background="@drawable/btn_estilizado"/>

    <TextView
            android:text="Esqueci a senha"
            android:layout_width="249dp"
            android:layout_height="24dp"
            android:id="@+id/textView2" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="80dp"
            android:layout_marginTop="12dp" app:layout_constraintTop_toBottomOf="@+id/button"
            android:textColor="#2843D8" android:textSize="16sp" android:textAlignment="center"/>
</androidx.constraintlayout.widget.ConstraintLayout>